<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/white</item>
        <!--<item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>-->
        <!-- Apply default style for alert dialogs -->
        <item name="android:alertDialogTheme">@style/AppAlertTheme</item>
        <item name="android:colorEdgeEffect" tools:targetApi="lollipop">@color/red_text_color</item>
        <!--        <item name="android:spinnerStyle">@style/spinner_style</item>-->
        <!--
                <item name="android:overlapAnchor" tools:targetApi="lollipop">false</item>
        -->
        <!--  <item name="seekBarStyle">@style/MySeekBar</item>-->
    </style>

    <style name="ToolBarAppTheme" parent="Theme.MaterialComponents.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Apply default style for alert dialogs -->
        <item name="android:alertDialogTheme">@style/AppAlertTheme</item>
        <item name="android:colorEdgeEffect" tools:targetApi="lollipop">@color/red_text_color</item>

        <!--        <item name="android:spinnerStyle">@style/spinner_style</item>-->

        <!--  <item name="seekBarStyle">@style/MySeekBar</item>-->
    </style>

    <style name="spinner_style">
        <item name="android:paddingLeft">0dp</item>
        <!--
                <item name="android:dropDownWidth">533dp</item>
                <item name="android:dropDownHeight">250dp</item>
        -->
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/white</item>
        <item name="android:overlapAnchor" tools:targetApi="lollipop">true</item>
        <item name="android:windowActionBarOverlay">@android:color/white</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/red_text_color</item>
        <item name="spinnerStyle">?android:attr/progressBarStyleSmall</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowNoTitle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

