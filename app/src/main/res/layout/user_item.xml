<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size_5"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_8"
    app:cardElevation="@dimen/size_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/u_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center" />

            <LinearLayout
                android:id="@+id/ll_transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingTop="@dimen/size_5"
                android:paddingRight="@dimen/size_10"
                android:paddingBottom="@dimen/size_5">

                <TextView
                    android:id="@+id/u_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_dark_gray_bg_style"
                    android:drawableLeft="@drawable/camera_img_small"
                    android:drawablePadding="@dimen/size_5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/size_6"
                    android:paddingTop="@dimen/size_2"
                    android:paddingRight="@dimen/size_6"
                    android:paddingBottom="@dimen/size_2"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_5"
            android:paddingRight="@dimen/size_5">

            <TextView
                android:id="@+id/u_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="@string/app_name"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/u_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="@string/app_name"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
